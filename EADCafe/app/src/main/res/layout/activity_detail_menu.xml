<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Nasi Goreng"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>


    <ImageView
        android:id="@+id/img_gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        app:srcCompat="@drawable/nasigoreng"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt_nama"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_gambar"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:text="Rp 25.000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_margin="20dp"
        android:text='Nasi goreng spesial upnormal terdiri dari sayuran sehat dan bumbu rempah"'/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_harga"
        android:layout_alignRight="@+id/txt_harga"
        android:layout_below="@+id/txt_harga"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:text="Komposisi :"/>
</RelativeLayout>
